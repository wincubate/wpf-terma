<Window x:Class="Triggers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trigger Test" Height="300" Width="525">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightBlue" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <StackPanel>
        <TextBox Margin="10" />
        <TextBox Margin="10" />
        <TextBox Margin="10" />
        <TextBox Margin="10" />
        <TextBox Margin="10" />
        <TextBox Margin="10" />
        <TextBox Margin="10" />
    </StackPanel>
</Window>
