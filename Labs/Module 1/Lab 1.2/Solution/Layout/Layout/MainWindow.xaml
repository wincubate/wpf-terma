<Window x:Class="Layout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Layout Test" Height="350" Width="525">
    <DockPanel>
        <Button x:Name="btn0" Margin="10" Padding="20">Yay!</Button>
        <StackPanel>
            <Button x:Name="btn1" Margin="10" Click="btn1_Click" HorizontalContentAlignment="Left">Button 1</Button>
            <Button x:Name="btn2" Margin="10" Click="btn2_Click" HorizontalAlignment="Left">Button 2</Button>
            <Button Margin="10" HorizontalContentAlignment="Center">Button 3</Button>
            <Button Margin="10" HorizontalAlignment="Center">Button 4</Button>
            <Button Margin="10" HorizontalContentAlignment="Right">Button 5</Button>
            <Button Margin="10" HorizontalAlignment="Right">Button 6</Button>
            <Button Margin="10">
                <StackPanel Orientation="Vertical">
                    <TextBlock>Button 7.1</TextBlock>
                    <TextBlock>Button 7.2</TextBlock>
                </StackPanel>
            </Button>
            <TextBox x:Name="txt" Margin="10">Yay!</TextBox>
        </StackPanel>
    </DockPanel>
</Window>
