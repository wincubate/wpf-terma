        Title="Layout Test" Height="350" Width="525">
    <DockPanel>
        <Button x:Name="btn0" Margin="10">Yay!</Button>
        <StackPanel>
            <Button x:Name="btn1" Margin="10" Click="btn1_Click">Button 1</Button>
            <Button x:Name="btn2" Margin="10" Click="btn2_Click">Button 2</Button>
            <Button Margin="10">Button 3</Button>
            <Button Margin="10">Button 4</Button>
            <TextBox x:Name="txt" Margin="10">Yay!</TextBox>
        </StackPanel>
    </DockPanel>
</Window>
