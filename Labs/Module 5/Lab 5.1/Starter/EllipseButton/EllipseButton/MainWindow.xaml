<Window x:Class="EllipseButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ControlTemplate test" Height="350" Width="525">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <Button>Button 1</Button>
        <Button Width="50">Button 2</Button>
        <Button Width="100">Button 3</Button>
        <Button Height="50" Background="LightGoldenrodYellow">Button 4</Button>
        <Button Width="50" Height="100" BorderBrush="Red">Button 5</Button>
    </StackPanel>
</Window>
