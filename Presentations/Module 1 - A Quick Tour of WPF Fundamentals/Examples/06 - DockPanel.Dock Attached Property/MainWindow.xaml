<Window x:Class="Wincubate.FundamentalsExamples.Slide06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DockPanel.Dock Attached Property" Height="350" Width="350">
    <DockPanel x:Name="dock" Background="Crimson">
        <TextBlock DockPanel.Dock="Left"
                   Background="ForestGreen"
                   FontSize="24">Hello</TextBlock>
        <Button DockPanel.Dock="Top" Margin="20" Click="Button_Click">Push me</Button>
        <TextBlock DockPanel.Dock="Right"
                   Background="Aqua">Dependency Properties</TextBlock>
    </DockPanel>
</Window>
