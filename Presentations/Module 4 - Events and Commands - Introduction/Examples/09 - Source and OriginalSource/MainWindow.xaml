<Window x:Class="Wincubate.EventAndCommandsExamples.Slide09.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="370" Width="525">
    <StackPanel>
        <Button x:Name="button" Margin="20"
                FontSize="20"
                Height="250"
                MouseMove="OnMouseMove">Click me!</Button>
        <TextBlock x:Name="txt"
                   DockPanel.Dock="Bottom"
                   Margin="5"/>
    </StackPanel>
</Window>
